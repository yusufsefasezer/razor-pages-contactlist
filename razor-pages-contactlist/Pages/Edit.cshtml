@page
@model razor_pages_contactlist.Pages.EditModel
@{
    ViewData["Title"] = "Edit " + Model.Contact.FullName;
}

<div class="py-5 bg-light">
    <div class="container">
        <form method="post">

            <div class="card">

                <header class="card-header">
                    <h3 class="m-0">@ViewData["Title"]</h3>
                </header>

                <div class="card-body">

                    <input asp-for="Contact.Id" type="hidden" />

                    @if (Model.ViewData.ModelState.ErrorCount > 0)
                    {
                        <div class="alert alert-danger" role="alert" asp-validation-summary="All"></div>
                    }

                    <div class="form-group row">
                        <label asp-for="Contact.FirstName" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="Contact.FirstName" />
                            <span asp-validation-for="Contact.FirstName"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Contact.LastName" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="Contact.LastName" />
                            <span asp-validation-for="Contact.LastName"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Contact.Email" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="Contact.Email" />
                            <span asp-validation-for="Contact.Email"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Contact.PhoneNumber" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="Contact.PhoneNumber" />
                            <span asp-validation-for="Contact.PhoneNumber"></span>
                        </div>
                    </div>


                    <div class="form-group row">
                        <label asp-for="Contact.WebAddress" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="Contact.WebAddress" />
                            <span asp-validation-for="Contact.WebAddress"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Contact.Address" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <textarea class="form-control" asp-for="Contact.Address"></textarea>
                            <span asp-validation-for="Contact.Address"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Contact.Notes" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <textarea class="form-control" asp-for="Contact.Notes"></textarea>
                            <span asp-validation-for="Contact.Notes"></span>
                        </div>
                    </div>

                </div>

                <footer class="card-footer text-right">
                    <input type="submit" value="Update" class="btn btn-primary" />
                </footer>

            </div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}