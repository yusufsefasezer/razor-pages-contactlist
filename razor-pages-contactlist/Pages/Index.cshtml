@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading text-uppercase">.NET Core Razor Pages contact list</h1>
        <p class="lead text-muted">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Inventore vel sapiente a quas. Error maiores corrupti id nostrum nulla amet vitae totam quas, officia deleniti ut debitis possimus, pariatur libero.</p>
        <p>
            <a asp-page="./Add" class="btn btn-primary my-2">Add new</a>
            <a href="#contactList" class="btn btn-secondary my-2">Show contacts</a>
        </p>
    </div>
</section>

<div class="py-5 bg-light">
    <div class="container">

        @if (!string.IsNullOrWhiteSpace(Model.Message))
        {
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                @Model.Message
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <div class="row" id="contactList">

            @foreach (var contact in Model.Contacts)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <h5 class="card-header">@contact.FullName</h5>
                        <div class="card-body">
                            <p>@contact.Notes</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-page="./View" asp-route-id="@contact.Id" class="btn btn-sm btn-outline-primary">View</a>
                                    <a asp-page="./Edit" asp-route-id="@contact.Id" class="btn btn-sm btn-outline-info">Edit</a>
                                    <a type="submit" class="btn btn-sm btn-outline-danger" asp-page-handler="delete" asp-route-id="@contact.Id">Delete</a>
                                </div>
                                <small class="text-muted"><time datetime="2016-04-01T19:00">@contact.CreateAt.ToLongDateString()</time></small>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>