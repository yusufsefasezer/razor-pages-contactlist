@page
@model razor_pages_contactlist.Pages.ViewModel
@{
    ViewData["Title"] = "View " + Model.Contact.FullName;
}

<div class="py-5 bg-light">
    <div class="container">

        <div class="card">

            <header class="card-header">
                <h3 class="m-0">@ViewData["Title"]</h3>
            </header>

            <div class="card-body">

                <div class="form-group row">
                    <label asp-for="Contact.FirstName" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input readonly class="form-control-plaintext" asp-for="Contact.FirstName" />
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Contact.LastName" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input readonly class="form-control-plaintext" asp-for="Contact.LastName" />
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Contact.Email" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input readonly class="form-control-plaintext" asp-for="Contact.Email" />
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Contact.PhoneNumber" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input readonly class="form-control-plaintext" asp-for="Contact.PhoneNumber" />
                    </div>
                </div>


                <div class="form-group row">
                    <label asp-for="Contact.WebAddress" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input readonly class="form-control-plaintext" asp-for="Contact.WebAddress" />
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Contact.Address" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <textarea readonly class="form-control-plaintext" asp-for="Contact.Address"></textarea>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Contact.Notes" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <textarea readonly class="form-control-plaintext" asp-for="Contact.Notes"></textarea>
                    </div>
                </div>

            </div>

        </div>

    </div>
</div>